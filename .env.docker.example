# ── Environment ───────────────────────────────────
SECRET_KEY=change-this-to-a-long-random-string
DEBUG=False
ALLOWED_HOSTS=your-ec2-public-ip,jobelevates.akramnaeemuddin.me,localhost

# SSL — set True since Certbot certs already exist on EC2
ENABLE_SSL=True

# ── Database (AWS RDS) ────────────────────────────
# Format: postgres://USER:PASSWORD@RDS-ENDPOINT:5432/DB_NAME
DATABASE_URL=postgres://your_rds_user:your_rds_password@your-rds-endpoint.rds.amazonaws.com:5432/your_db_name

# ── Email ─────────────────────────────────────────
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ── AI ────────────────────────────────────────────
GOOGLE_API_KEY=your-gemini-api-key

# ── S3 Media Storage ─────────────────────────────
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ── Security (production) ────────────────────────
CSRF_TRUSTED_ORIGINS=https://jobelevates.akramnaeemuddin.me
CORS_ALLOWED_ORIGINS=https://jobelevates.akramnaeemuddin.me
